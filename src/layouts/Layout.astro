---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/assets/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "PoppinsRegular";
    src: url(fonts/poppins-reg.ttf) format("truetype");
  }
  @font-face {
    font-family: "PoppinsBold";
    src: url(fonts/poppins-bold.ttf) format("truetype");
  }
  :root {
    /* Spacers */
    --spacer--sm: clamp(12px, 6.615383px + 1.538462vw, 22px);
    --spacer--md: clamp(24px, 15.384617px + 2.461538vw, 40px);
    --spacer--lg: clamp(32px, 8.8461525px + 6.615385vw, 75px);

    /* Fonts */
    --fontXS: clamp(0.8rem, 0.7648rem + 0.1502vw, 0.9rem);
    --fontS: clamp(0.8rem, 0.6944rem + 0.4507vw, 1.1rem);
    --fontM: clamp(1.18rem, 0.94454538rem + 1.076364vw, 1.55rem);
    --fontL: clamp(1.35rem, 0.93636366rem + 1.890909vw, 2rem);
    --fontXL: clamp(1.8rem, 1.4831rem + 1.3521vw, 2.7rem);
    --fontXXL2: clamp(3rem, 2.2958rem + 3.0047vw, 5rem);
    --fontXXL: clamp(4rem, 3.6479rem + 1.5023vw, 5rem);

    /* Fams */
    --poppinsReg: "PoppinsRegular", sans-serif;
    --poppinsBold: "PoppinsBold", sans-serif;

    /* Colors */
    --colorWhite: #f2f2f2;
    --colorDark: #0d0d0d;
    --colorGray: #181818;
    --colorOrange: #db8a3f;
    --colorBlue: #8de9fa;
  }
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    border: 0;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    background: var(--colorDark);
    color: var(--colorWhite);
    font-family: var(--poppinsReg);
  }
  .gradientText {
    background: -webkit-linear-gradient(#facf61, #bf5417);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .navLink {
    position: relative;
    padding-bottom: 4px;
  }

  .navLink::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 3px;
    border-radius: 4px;
    background-color: var(--colorBlue);
    bottom: 0;
    left: 0;
    transform-origin: right;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }

  .navLink:hover::before {
    transform-origin: left;
    transform: scaleX(1);
  }

  .btn {
    cursor: pointer;
    width: 30px;
    height: 30px;
    padding-top: 0.2px;
  }
  .btn span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: var(--colorBlue);
    margin-top: 6px;
    transform-origin: 0px 100%;
    transition: all 300ms;
  }
  .btn__line1-active {
    transform: rotate(45deg) translate(-3px, 2px);
  }
  .btn__line2-active {
    opacity: 0;
    margin-right: 30px;
  }
  .btn__line3-active {
    transform: rotate(-45deg) translate(-3px, 1px);
  }
</style>
